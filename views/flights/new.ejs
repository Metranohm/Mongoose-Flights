<main>
  <h1><%= title %></h1>
    <form id="new-form" action="/flights" method="POST">
      <label for="airline-input" value="">Airline</label>
      <select name="airline" id="airline-select">
        <option value="none" selected disabled hidden>Select an Option</option>
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
      </select>
      <label for="airport-input">Airport</label>
      <select name="airport" id="airport-select">
        <option value="DEN-Denver">DEN-Denver</option>
        <option value="AUS-Austin">AUS-Austin</option>
        <option value="DFW-Dallas">DFW-Dallas</option>
        <option value="LAX-Los Angeles">LAX-Los Angeles</option>
        <option value="SAN-San Francisco">SAN-San Francisco</option>
      </select>
      <label for="flightNo-input">Flight Number</label>
      <input type="number" id="flightNo" value=""
       min="10" max="9999">
       <label for="departs-input">Departure Date</label>
      <input type='number' id="departs" value="10/25/2023">
      <button type="submit">Add Flight</button>
    </form>

