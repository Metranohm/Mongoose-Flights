<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %> 

<main>
  <h1><%= title %></h1>
    <form id="new-form" action="/flights/<%= flight.id %>?_method=PUT" method="POST">
      <label for="airline-input" value="">Airline</label>
      <select name="airline" id="airline-select">
        <option value="<%= flight.airline %>"><%= flight.airline %></option>
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
      </select>
      <label for="airport-input">Airport</label>
      <select name="airport" id="airport-select">
        <option value="<%= flight.airport %>"><%= flight.airport %></option>
        <option value="DEN-Denver">DEN-Denver</option>
        <option value="AUS-Austin">AUS-Austin</option>
        <option value="DFW-Dallas">DFW-Dallas</option>
        <option value="LAX-Los Angeles">LAX-Los Angeles</option>
        <option value="SAN-San Francisco">SAN-San Francisco</option>
      </select>
      <label for="flightNo-input">Flight Number</label>
      <input name="flightNo" type="number" id="flightNo" value=""
        min="10" max="9999">
        <label for="departs-input">Departure Date</label>
      <input  name="departs" type='date' id="departs" value="10/25/2023">
      <button type="submit">Save Flight</button>
    </form> 

</main>

<%- include('../partials/footer') %>